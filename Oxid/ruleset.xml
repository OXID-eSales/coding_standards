<?xml version="1.0"?>
<ruleset name="Oxid">
    <description>OXID coding standards.</description>

    <!-- Ignore patterns -->
    <exclude-pattern>*/Application/views/*</exclude-pattern>
    <exclude-pattern>*/oxfunctions.php*</exclude-pattern>
    <exclude-pattern>*/Core/Smarty/*</exclude-pattern>
    <exclude-pattern>*/Core/tcpdf/*</exclude-pattern>
    <exclude-pattern>*/Core/adodblite/*</exclude-pattern>
    <exclude-pattern>*/out/*</exclude-pattern>
    <exclude-pattern>*/Setup/tpl/*</exclude-pattern>
    <exclude-pattern>*/tmp[^/]*/*</exclude-pattern>
    <exclude-pattern>/config.inc.php</exclude-pattern>
    <exclude-pattern>/vendor/autoload.php</exclude-pattern>
    <exclude-pattern>/vendor/behat</exclude-pattern>
    <exclude-pattern>/vendor/bin</exclude-pattern>
    <exclude-pattern>/vendor/composer</exclude-pattern>
    <exclude-pattern>/vendor/doctrine</exclude-pattern>
    <exclude-pattern>/vendor/fabpot</exclude-pattern>
    <exclude-pattern>/vendor/guzzle</exclude-pattern>
    <exclude-pattern>/vendor/incenteev</exclude-pattern>
    <exclude-pattern>/vendor/justinrainbow</exclude-pattern>
    <exclude-pattern>/vendor/mikey179</exclude-pattern>
    <exclude-pattern>/vendor/ocramius</exclude-pattern>
    <exclude-pattern>/vendor/pdepend</exclude-pattern>
    <exclude-pattern>/vendor/phpdocumentor</exclude-pattern>
    <exclude-pattern>/vendor/phpmailer</exclude-pattern>
    <exclude-pattern>/vendor/phpspec</exclude-pattern>
    <exclude-pattern>/vendor/phpunit</exclude-pattern>
    <exclude-pattern>/vendor/psr</exclude-pattern>
    <exclude-pattern>/vendor/sebastian</exclude-pattern>
    <exclude-pattern>/vendor/seld</exclude-pattern>
    <exclude-pattern>/vendor/smarty</exclude-pattern>
    <exclude-pattern>/vendor/squizlabs</exclude-pattern>
    <exclude-pattern>/vendor/symfony</exclude-pattern>
    <exclude-pattern>/vendor/theseer</exclude-pattern>
    <exclude-pattern>/vendor/webmozart</exclude-pattern>
    <exclude-pattern>/vendor/zendframework</exclude-pattern>    
    <exclude-pattern>/tests/</exclude-pattern>
    <exclude-pattern>/modules/</exclude-pattern>

    <!--  Include specific sniffs from the other standards. -->
    <rule ref="Generic.Metrics.CyclomaticComplexity"/>
    <rule ref="PEAR.Commenting.InlineComment"/>
    <rule ref="PEAR.Files.IncludingFile"/>
    <rule ref="Zend.NamingConventions.ValidVariableName" />

    <!-- Set specific rules for certain sniffs. -->
    <rule ref="Zend.NamingConventions.ValidVariableName.NotCamelCaps">
        <exclude-pattern>*</exclude-pattern>
    </rule>

    <rule ref="Zend.NamingConventions.ValidVariableName.MemberVarContainsNumbers">
        <exclude-pattern>*</exclude-pattern>
    </rule>

    <rule ref="Zend.NamingConventions.ValidVariableName.ContainsNumbers">
        <exclude-pattern>*</exclude-pattern>
    </rule>

    <rule ref="Zend.NamingConventions.ValidVariableName.StringVarContainsNumbers">
        <exclude-pattern>*</exclude-pattern>
    </rule>

    <rule ref="Zend.NamingConventions.ValidVariableName.PrivateNoUnderscore">
        <exclude-pattern>*</exclude-pattern>
    </rule>

    <rule ref="Generic.Files.LineLength.TooLong">
        <exclude-pattern>*</exclude-pattern>
    </rule>

    <rule ref="Oxid.Commenting.FunctionComment.MissingParamComment">
        <exclude-pattern>*</exclude-pattern>
    </rule>

    <rule ref="PSR2.Classes.PropertyDeclaration.Underscore">
        <exclude-pattern>*</exclude-pattern>
    </rule>

    <rule ref="PSR2.Methods.MethodDeclaration.Underscore">
        <exclude-pattern>*</exclude-pattern>
    </rule>

    <rule ref="PSR2">
        <exclude name="Squiz.Classes.ValidClassName"/>
        <exclude name="Generic.NamingConventions.CamelCapsFunctionName"/>
    </rule>

    <rule ref="PSR1">
        <exclude name="PSR1.Classes.ClassDeclaration"/><!--namespaces are not used yet-->
        <exclude name="PSR1.Files.SideEffects"/><!--separation of logic is not used yet-->
    </rule>

</ruleset>
